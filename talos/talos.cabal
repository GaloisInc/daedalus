category:            Language
build-type:          Simple
extra-source-files:  CHANGELOG.md

library
  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options:         -Wall -O2
  ghc-prof-options:    -fprof-auto
  exposed-modules:     Talos.Monad
                     , Talos.Lib
                     , Talos.Path
                     
                     , Talos.Solver.SolverT
                     -- , Talos.SymExec.StdLib
                     , Talos.Solver.ModelParser

                     -- , Talos.Backend.Z3
                     , Talos.Analysis
                     , Talos.Analysis.AbsEnv
                     , Talos.Analysis.VarAbsEnv
                     , Talos.Analysis.FieldAbsEnv
                     , Talos.Analysis.FLAbsEnv
                     , Talos.Analysis.Eqv
                     , Talos.Analysis.Merge
                     , Talos.Analysis.Domain
                     , Talos.Analysis.Fixpoint
                     , Talos.Analysis.Monad
                     , Talos.Analysis.Slice
                     , Talos.Analysis.SLExpr
                     , Talos.Analysis.Exported
                     , Talos.Analysis.BoundedStreams

                     , Talos.Strategy
                     , Talos.Strategy.Monad
                     , Talos.Strategy.OptParser

                     , Talos.Strategy.BTRand
                     , Talos.Strategy.DFST

                     , Talos.Strategy.PathSymbolic
                     , Talos.Strategy.PathSymbolic.Branching
                     , Talos.Strategy.PathSymbolic.Assertion                      
                     , Talos.Strategy.PathSymbolic.PathSet
                     , Talos.Strategy.PathSymbolic.Monad
                     , Talos.Strategy.PathSymbolic.MuxValue
                     , Talos.Strategy.PathSymbolic.PathBuilder
                     , Talos.Strategy.PathSymbolic.SymExec
                     , Talos.Strategy.PathSymbolic.Streams
                     
                     -- , Talos.Strategy.BackwardSymbolic

                     , Talos.Synthesis

                     , Talos.Passes
                     , Talos.Passes.LiftExpr
                     , Talos.Passes.NoBytesPatterns

                     , Talos
                     -- , Machine
  build-depends:       base
                     , daedalus
                     , daedalus-utils
                     , daedalus-value
                     , daedalus-core
                     , random
                     , rts-hs
                     , rts-hs-data
                     , vector
                     , parameterized-utils
                     , mtl >= 2.3.1
                     , containers >= 0.6.4
                     , bytestring
                     , simple-smt >= 0.9.6
                     , streaming
                     , transformers >= 0.5.6.2
                     , IntervalMap
                     , split
                     , deepseq
                     , clock
                     , text
                     , vector
                     , generic-lens
                     , lens
                     , free
                     , co-log-core

executable talos
  main-is:             Main.hs
  other-modules:       CommandLine
  -- other-extensions:
  build-depends:       base
                     , talos
                     , daedalus
                     , daedalus-value
                     , daedalus-utils
                     , daedalus-core                     
                     , optparse-applicative
                     , bytestring
                     , streaming
                     , pretty-hex
                     -- , rts-hs
                     -- , vector
                     -- , parameterized-utils
                     -- , mtl
                     , containers
                     , co-log-core
                     , simple-smt
                     , ansi-terminal

  hs-source-dirs:      app
  default-language:    Haskell2010
  ghc-options:         -Wall -O2
  ghc-prof-options:    -fprof-auto


